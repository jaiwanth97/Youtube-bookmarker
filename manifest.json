{
    "manifest_version": 3,
    "name": "Chrome Bookmarker by jaiwanth97",
    "version": "2.1.3",
    "description": "This extension allows you to bookmark YouTube videos and their timestamps.",
    "author": "jaiwanth97",
    "permissions": ["storage", "tabs"],
    "host_permissions": ["*://www.youtube.com/*"],
    "background": {
      "service_worker": "background.js",
      "type": "module"
    },
    "icons": {
      "16": "images/display.png",
      "48": "images/display.png",
      "128": "images/display.png"
    },
    "content_scripts": [
      {
        "matches": ["*://www.youtube.com/*"],
        "js": ["content.js"],
        "run_at": "document_idle"
      }
    ],
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "images/display.png",
        "48": "images/display.png",
        "128": "images/display.png"
      }
    },
    "web_accessible_resources": [
      {
        "resources": ["images/plus.png", "images/default-thumbnail.png"],
        "matches": ["*://www.youtube.com/*"]
      }
    ]
  }